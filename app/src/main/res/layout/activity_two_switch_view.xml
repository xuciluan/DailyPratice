<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.myapplication.twoviewswitch.TwoViewSwitcherLayout
        android:id="@+id/two_view_switcher"
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="我是第一"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="我是第二"/>
    </com.example.myapplication.twoviewswitch.TwoViewSwitcherLayout>

    <Button
        android:id="@+id/btn_two_switch"
        android:onClick="onClick"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/two_view_switcher"
        android:text="two_view_switch"/>

</androidx.constraintlayout.widget.ConstraintLayout>